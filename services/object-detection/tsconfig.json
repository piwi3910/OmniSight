{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "../../",
    "paths": {
      "@/*": ["services/object-detection/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*", "../../shared/hardware-acceleration/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}